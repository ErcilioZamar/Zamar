import random

# Listas de caracteres
letras_minusculas = list("abcdefghijklmnopqrstuvwxyz")
letras_maiusculas = list("ABCDEFGHIJKLMNOPQRSTUVWXYZ")
numeros = list("0123456789")
simbolos = list("!@#$%^&*()_+-=[]{}|;:,.<>?")

# Pergunta pro usuário
qtd_letras = int(input("Quantas letras você quer na senha? "))
qtd_numeros = int(input("Quantos números você quer? "))
qtd_simbolos = int(input("Quantos símbolos você quer? "))

# Garantir pelo menos 1 de cada tipo
senha_lista = [
    random.choice(letras_minusculas),
    random.choice(letras_maiusculas),
    random.choice(numeros),
    random.choice(simbolos)
]

# Ajustar os números restantes
restante_letras = max(0, qtd_letras - 2)  # 1 maiúscula + 1 minúscula já contadas
for _ in range(restante_letras):
    senha_lista.append(random.choice(letras_minusculas + letras_maiusculas))

for _ in range(max(0, qtd_numeros - 1)):
    senha_lista.append(random.choice(numeros))

for _ in range(max(0, qtd_simbolos - 1)):
    senha_lista.append(random.choice(simbolos))

# Embaralhar os caracteres
random.shuffle(senha_lista)

# Transformar em string
senha = ''.join(senha_lista)

print(f"Sua senha turbo gerada é: {senha}")
